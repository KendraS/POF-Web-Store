<div class="container">
<h2 class="search_res">Search Results For '<%= params[:search_keywords] %>'</h2>

<% if @results_of_keyword_search.empty? %>
	<p>No results found.</p>
<% else %>
	<p><%= pluralize(@results_of_keyword_search.size, 'Product') %> Found.</p>
	<%= render partial: 'products/product',
		   collection: @results_of_keyword_search %>
<% end %>
</div>